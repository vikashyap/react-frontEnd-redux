{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "modules": false,
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-constant-condition": 0,
        "no-control-regex": 0,
        "no-debugger": 2,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": [1, "functions"],
        "no-template-curly-in-string": 2,
        "valid-jsdoc": 2,
        "accessor-pairs": 1,
        "array-callback-return": 1,
        "block-scoped-var": 1,
        "consistent-return": 0,
        "curly": 2,
        "default-case": [
            1,
            {
                "commentPattern": "^skip\\sdefault"
            }
        ],
        "dot-location": 1,
        "eqeqeq": [2, "smart"],
        "max-len": 0,
        "no-alert": 2,
        "no-caller": 2,
        "no-empty-function": [
            1,
            {
                "allow": ["generatorFunctions", "constructors"]
            }
        ],
        "no-eval": 1,
        "no-extend-native": 1,
        "no-extra-bind": 1,
        "no-extra-label": 1,
        "no-fallthrough": 1,
        "no-floating-decimal": 1,
        "no-global-assign": 1,
        "no-implicit-coercion": [
            1,
            {
                "allow": ["!!", "~"]
            }
        ],
        "no-implicit-globals": 1,
        "no-implied-eval": 1,
        "no-invalid-this": 0,
        "no-param-reassign": 0,
        "no-self-assign": 1,
        "no-unused-expressions": [
            1,
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "no-warning-comments": [
            1,
            {
                "terms": ["todo", "fixme", "hack", "toreview", "xxx"],
                "location": "anywhere"
            }
        ],
        "one-var": [
            1,
            {
                "initialized": "never",
                "uninitialized": "always"
            }
        ],
        "vars-on-top": 0,
        "wrap-iife": [1, "inside"],
        "no-unused-vars": [0, { "vars": "local", "args": "after-used" }],
        "brace-style": [
            1,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "camelcase": 1,
        "capitalized-comments": [
            0,
            "always",
            {
                "ignorePattern": "pragma|ignored",
                "ignoreInlineComments": false
            }
        ],
        "comma-dangle": [1, "never"],
        "func-names": 0,
        "indent": [
            0,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "keyword-spacing": 0,
        "linebreak-style": [0, "windows"],
        "new-cap": [
            1,
            {
                "newIsCap": true,
                "capIsNew": false
            }
        ],
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "one-var-declaration-per-line": [1, "initializations"],
        "quotes": [
            0,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "semi": [1, "always"],
        "space-before-function-paren": 0,
        "spaced-comment": 0,
        "arrow-body-style": [0, "as-needed"],
        "arrow-parens": [2, "as-needed"],
        "no-useless-constructor": 0,
        "no-var": 0,
        "object-shorthand": [0, "consistent-as-needed"],
        "prefer-arrow-callback": 0,
        "prefer-spread": 0,
        "prefer-template": 1,
        "react/jsx-boolean-value": 0,
        "react/jsx-indent": 0,
        "react/jsx-indent-props": 0,
        "react/no-array-index-key": 0,
        "react/jsx-no-bind": 0,
        "react/prefer-stateless-function": 0,
        "react/prop-types": 0,
        "jsx-a11y/href-no-hash": 0,
        "jsx-a11y/label-has-for": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "import/prefer-default-export": 0
    },
    "globals": {
        "_": false
    }
}
